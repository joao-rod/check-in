{% extends 'base.html.twig' %}

{% block title %} Novo Usuário {% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        input {
            border-color: #b6b2b2 !important;
            border-radius: 5px !important;
            outline: 0 !important;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="flex justify-center">
        <div class="space-y-6 w-full max-w-sm p-4 bg-white border border-gray-200 rounded-lg shadow sm:p-6 md:p-8 dark:bg-gray-800 dark:border-gray-700">
            <form action="{{ path('app_login') }}" method="post" class="space-y-6">
                <h5 class="text-xl font-medium text-gray-900 dark:text-white">Faça login</h5>

                {% if error %}
                    <div class="w-full text-white bg-red-400 m-b-2 focus:outline-none font-medium rounded-lg text-sm px-5 py-2.5">
                        {{ error.messageKey|trans(error.messageData, 'security') }} 
                        <i class="fa-solid fa-circle-exclamation"></i>
                    </div>
                {% endif %}
                
                <input type="hidden" name="_target_path" value="/">

                <div>
                    <label for="username" class="block">Email</label>
                    <input type="email" class="w-full" id="username" name="_username" value="{{ lastUser }}">
                </div>

                <div>
                    <label for="password" class="block">Senha</label>
                    <input type="password" class="w-full" id="password" name="_password">
                </div>
                
                <button type="submit" class="w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                    Fazer login
                </button>
            </form>
            <div class="text-sm font-medium text-gray-500 dark:text-gray-300">
                Não é registrado? <a href="{{ path('app_register') }}" class="text-blue-700 hover:underline dark:text-blue-500">Crie uma conta</a>
            </div>
        </div>
    </div>

{% endblock %}
